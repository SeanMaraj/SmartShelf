<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/eventOptionsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:paddingRight="20dp"
        android:visibility="visible">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event Time: "/>

            <EditText
                android:id="@+id/eventTimeEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="09:00" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event Date: "/>

            <EditText
                android:id="@+id/eventDateEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Jan 1, 2016" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventRepeatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Repeat: "/>

            <Spinner
                android:id="@+id/eventRepeatSpinner"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sunBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="S"/>
            <Button
                android:id="@+id/monBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="M"/>
            <Button
                android:id="@+id/tuesBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="T"/>
            <Button
                android:id="@+id/wedBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="W"/>
            <Button
                android:id="@+id/thrusBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="T"/>
            <Button
                android:id="@+id/friBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="F"/>
            <Button
                android:id="@+id/satBtn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="S"/>



        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Type description"/>
    </LinearLayout>

</LinearLayout>