<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:text="SAVE"
            android:textSize="10dp"/>

        <Button
            android:id="@+id/addNotifBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:text="Add Notification"
            android:textSize="5dp"/>

        <Button
            android:id="@+id/setInitWeightBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentRight="true"
            android:text="Set Init Weight"
            android:textSize="5dp"/>


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/zoneNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zone Name"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/zoneNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zone Number: "
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/baseNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base Number: "
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/currentWeightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current weight: 10kg"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/initialWeightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initial Weight: 10kg"
            android:textSize="10dp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stockTab"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:background="#FF444444"
                    android:text="STOCK"/>
                <TextView
                    android:id="@+id/reminderTab"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/tabinactive"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="REMINDERS"/>
                <TextView
                    android:id="@+id/weatherTab"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/tabinactive"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="WEATHER"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/stockNotifLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:background="#FF444444">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="STOCK NOTIFICATIONS"
                    android:textSize="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFFFF"/>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:fadeScrollbars="false"
                    android:id="@+id/stockList"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/reminderNotifLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:background="#FF444444">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="REMINDERS"
                    android:textSize="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFFFF"/>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:fadeScrollbars="false"
                    android:id="@+id/reminderList"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weatherNotifLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:background="#FF444444">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="WEATHER REMINDERS"
                    android:textSize="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFFFF"/>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:fadeScrollbars="false"
                    android:id="@+id/weatherList"
                    android:layout_weight="1" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>