<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/zoneItemLayout">

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/zoneNumberText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sugar"
        android:id="@+id/zoneNameText"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@id/zoneNumberText"
        android:layout_toRightOf="@id/zoneNumberText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10%"
        android:id="@+id/percentText"
        android:layout_marginRight="7dp"
        android:layout_alignBottom="@+id/zoneNumberText"
        android:layout_toLeftOf="@+id/weightDivider" />

    <View
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:id="@+id/weightDivider"
        android:layout_centerVertical="true"
       android:layout_toLeftOf="@+id/initialWeightText"
        android:layout_marginRight="5dp"
        android:background="#FFFFFF"/>


    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="500g"
        android:id="@+id/initialWeightText"
        android:layout_alignBottom="@+id/zoneNameText"
        android:layout_alignParentRight="true"/>


</RelativeLayout>